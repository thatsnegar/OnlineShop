@model IEnumerable<ViewModels.Blogs.RecentBlogViewModel>

<aside class="area-sidebar">
	<div class="widget-sidebar mb-4 pb-3">
		<section>
			<form class="search-form d-flex w-100" action="" method="get">
				<input type="text" class="form-control input_search" placeholder="جستجو کنید">
				<button type="submit">
					<i class="fas fa-search"></i>
				</button>
			</form>
		</section>
	</div>
	<div class="widget-sidebar mb-4 pb-3">
		<header>
			<h3 class="title-widget-sidebar">
				پست های اخیر
			</h3>
		</header>
		<section>
			<ul class="area-post-thumbnail-sidebar">
				@if (Model.Any())
				{
					foreach (var item in Model)
					{
						<li class="d-flex mb-2">
							<a asp-controller="Blogs" asp-action="Details" asp-route-id="@(item.BlogId)" class="link-img-post-thumbnail grayscale">
								<img class="img-Post-thumbnail" src="~/emoniFiles/Blogs/@(item.ImageBlogName)" alt="@(item.ImageBlogName)" />
							</a>
							<div class="details-Post-thumbnail">
								<h4 class="mb-1">
									<a asp-controller="Blogs" asp-action="Details" asp-route-id="@(item.BlogId)">
										@(item.Title)
									</a>
								</h4>
								<p class="small m-0">
									@(item.InsertDateTime.ToShamsiWithoutTime())
								</p>
							</div>
						</li>
					}
				}
			</ul>
		</section>
	</div>
</aside>