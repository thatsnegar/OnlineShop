@model ViewModels.Addresses.EditAddressViewModel;
<div class="modal fade " id="editModal">
    <input type="hidden" id="hiddenId"/>
    <div class="modal-dialog">
        <div class="modal-content2">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="area-form-wrap-modal contact mb-5 mb-lg-0">
                    <div class="area-form-contact">
                        <h3 class="h4 mb-4 title-contact" style="text-align: center;">
                            ویرایش آدرس
                        </h3>
                        <div class="row">
                            <div class="form-group-modal mb-4 col-12 col-md-6">
                                @*Country*@
                                <label for="State">
                                    کشور :
                                </label>
                                <input type="text" id="CountryEdit" class="form-control" placeholder="استان را وارد کنید" required />
                            </div>
                            <div class="form-group-modal mb-4 col-12 col-md-6">
                                @*State*@
                                <label for="State">
                                    استان:
                                </label>
                                <input type="text" id="StateEdit" class="form-control" placeholder="استان را وارد کنید" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group-modal mb-4 col-12 col-md-6">
                                @*City*@
                                <label for="City">
                                    شهر :
                                </label>
                                <input type="text" id="CityEdit" class="form-control" placeholder="شهر را وارد کنید" required>
                            </div>
                            <div class="form-group-modal mb-4 col-12 col-md-6">
                                @*ZipCode*@
                                <label for="Postal code">
                                    کدپستی :
                                </label>
                                <input type="text" id="ZipCodeEdit" class="form-control" placeholder="کد پستی را وارد کنید" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group-modal mb-4 col-12">
                                @*UserAddress*@
                                <label for="adress">
                                    آدرس:
                                </label>
                                <textarea id="UserAddressEdit" class="form-control" rows="8" placeholder="آدرس را وارد کنید" style="font-size: 12px;" required></textarea>
                            </div>
                        </div>
                        <div class="form-group-modal mb-4 col-12">
                            <div class="btn-from-login">
                                <button onclick="RegisterEdit()" class="btn-animate1 btn-multi-step mt-4">
                                    ثبت
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
