@model ViewModels.Accounts.SetNewPasswordViewModel

<main class="forget-pasword align-items-center justify-content-center">
    <section class="login">
        <div class="container">
            <div class="row justify-content-center">
                <div class="multi-step-login col col-md-9 col-lg-8 col-xl-6 mt-3">
                    <div class="login login-register-wrap">
                        <div class="area-form-login area-form-login-register p-3 p-sm-4 p-md-5 ">
                            <div class="header-login">
                                <img src="./img/logo (1).png" alt="">
                            </div>
                            <form asp-controller="Account" asp-action="SetNewPassWord" method="Post">
                                <div asp-validation-summary="ModelOnly"></div>
                                <input type="hidden" asp-for="UserId" />
                                <div class="tab">
                                    <h3>
                                        تغییر رمز عبور
                                    </h3>
                                    <label asp-for="NewPassword">
                                        رمز عبور جدید
                                    </label>
                                    <input asp-for="NewPassword" type="password" class="form-control inputpassword" id="changePassword" aria-label="Enter Password" aria-describedby="newPassword" required>
                                    <span asp-validation-for="NewPassword" class="text-danger fontSize14"></span>
                                    <span class="icon-eye-password" id="changEyePassword">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </span>
                                    <br />
                                    <label asp-for="RePassword">
                                        تکرار رمز عبور جدید
                                    </label>
                                    <input asp-for="RePassword" type="password" class="form-control inputpassword-repetition" id="changePasswordcopy" required>
                                    <span asp-validation-for="RePassword" class="text-danger fontSize14"></span>
                                    <span class="icon-eye-password-copy" id="changEyePasswordcopy">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </span>
                                    <span class="danger">
                                        <p>
                                            رمز عبور باید حداقل 8حرف باشد!
                                        </p>
                                        <p>
                                            شامل علامت (!@@#$%&*^)
                                        </p>
                                        <p>
                                            شامل یک حرف بزرگ و کوچک
                                        </p>
                                    </span>
                                </div>
                                <div style="overflow:auto;text-align: center;align-items: center;">
                                    <div style="align-items: center;justify-content: center;display: flex;">
                                        <button type="submit" class="btn-multi-step" id="nextBtn">
                                            ثبت
                                        </button>
                                    </div>
                                </div>
                                @*Circles which indicates the steps of the form*@
                                <div style="text-align:center;margin-top:40px;">
                                    <span class="step"></span>
                                    <span class="step"></span>
                                    <span class="step"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
