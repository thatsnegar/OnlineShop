@model ViewModels.Accounts.ForgotPasswordViewModel

@{
	ViewBag.Title = "فراموشی رمز عبور";

	Layout = "~/Views/Shared/Layout/_Account.cshtml";
}

<main class="forget-pasword align-items-center justify-content-center">
	<section class="login">
		<div class="container">
			<div class="row justify-content-center">
				<div class="multi-step-login col col-md-9 col-lg-8 col-xl-6 mt-3">
					<div class="login login-register-wrap">
						<div class="area-form-login area-form-login-register p-3 p-sm-4 p-md-5 ">
							<div class="header-login">
								<img src="./img/logo (1).png" alt="">
							</div>
							<form asp-controller="Account" asp-action="ForgotPassword" method="Post">
								<div asp-validation-summary="ModelOnly"></div>
								@*One "tab" for each step in the form*@
								<div class="tab">
									<h3>
										بازیابی رمز عبور
									</h3>
									<label>
										برای بازیابی رمز عبور شماره تلفن همراه خود را وارد کنید
									</label>
									<input asp-for="PhoneNumber" type="number" class="form-control" placeholder="تلفن همراه خود را وارد کنید" required>
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
								<div style="overflow:auto;text-align: center;align-items: center;">
									<div style="align-items: center;justify-content: center;display: flex;">
										<button type="submit" class="btn-multi-step" id="nextBtn">
											ادامه
										</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>

@section Scripts
	{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
    }
