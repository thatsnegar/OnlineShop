@model IEnumerable<ViewModels.VirtualTour.IndexViewModel>
<body class="blog blog-three-column">
    <section class="mb-5 pb-sm-2 pb-md-3  pb-lg-4 pb-xl-5">
        <div class="container container-4xl">
            @*BreadCrumb*@
            @await Component.InvokeAsync(name:"BreadCrumbsComponent")
                <h1 class="text-center mb-3">تور مجازی</h1>
                <nav aria-label="breadcrumb" class="mb-4 mb-lg-3">
                    <ol class="breadcrumb breadcrumb-singleProduct ">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Home">
                                خانه
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="VirtualTours">
                                تورمجازی
                            </a>
                        </li>
                        @*<li class="breadcrumb-item active">تورمجازی</li>*@
                    </ol>
                </nav>
            </div>
        
    </section>

    <main class="content">
        <div class="container container-2xl">
            <div class="row">
                <div class="row justify-content-center mb-5">
                    <h2 class="wow fadeInUp title-site">
                        تورمجازی
                    </h2>
                </div>
                @*Video List*@
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card card-post mt-5">
                                <div class="hover01 column h_iframe-aparat_embed_frame">
                                    <figure>
                                        <div id="@(item.VideoId)">
                                            <script src="@(item.Link)"></script>
                                        </div>
                                    </figure>
                                </div>
                                <div class="card-body-virtual-tour">
                                   @* <div class="meta-post d-flex mb-3">
                                        <div class="date-post item-meta-post me-3">
                                            <a href="#" class="data-link">
                                                @(item.InsertDateTime)
                                            </a>
                                        </div>
                                    </div>*@
                                    <div class="content-post">
                                        <h2 class="title-post">
                                            @(Html.Raw(item.Description))
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>


            @*Pagination VirtualTours*@
            @if (ViewBag.TotalPages > 1)
            {
                <ul class="pagination page-numbers d-flex justify-content-center order-2 order-md-1 mt-5">
                    @if (ViewBag.PageNumber <= 1)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-area="" asp-controller="VirtualTours" asp-action="Index" asp-route-pageNumber="@((int)ViewBag.PageNumber - 1)" tabindex="-1">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }

                    @for (var index = 1; index <= (ViewBag.TotalPages); index++)
                    {
                        <li class="page-item @(((int)ViewBag.PageNumber==index)?"active":"")">
                            <a class="page-link" asp-area="" asp-controller="VirtualTours" asp-action="Index" asp-route-pageNumber="@index">
                                @index
                            </a>
                        </li>
                    }

                    @if (ViewBag.PageNumber >= ViewBag.TotalPages)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Next">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-area="" asp-controller="VirtualTours" asp-action="Index" asp-route-pageNumber="@((int)ViewBag.PageNumber + 1)" aria-label="Next">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>
    </main>
</body>

@section Footer{
    <partial name="~/Views/Shared/PartialViews/Default/_Footer.cshtml" />
}