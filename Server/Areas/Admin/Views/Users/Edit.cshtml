@model ViewModels.AdminViewModels.Users.EditViewModel

@section Styles
	{
	<link rel="stylesheet" type="text/css" href="~/admin/app-assets/css-rtl/core/colors/palette-gradient.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="~/admin/assets/css/uploadFile.css" />
}

	<div class="app-content content">
		<div class="content-wrapper pb-0">
			<div class="content-wrapper-before"></div>
			<div class="content-header row">
				<div class="content-header-right col-md-8 col-12">
					<div class="breadcrumbs-top">
						<div class="breadcrumb-wrapper mr-1">
							<ol class="breadcrumb">
								<li class="breadcrumb-item">
									<a asp-area="Admin" asp-controller="Home" asp-action="Index">
										خانه
									</a>
								</li>
								<li class="breadcrumb-item ">
									<a asp-area="Admin" asp-controller="Users" asp-action="Index">
										مدیریت کاربران
									</a>
								</li>
								<li class="breadcrumb-item active">
									ویرایش کاربر
								</li>
							</ol>
						</div>
					</div>
				</div>
			</div>
			<div class="content-body">
				<section id="basic-form-layouts">
					<div class="row match-height">
						<div class="col-md-12">
							<div class="card mb-0">
								<div class="card-header">
									<h4 class="card-title" id="basic-layout-form">
										اضافه کردن کاربر
									</h4>
									<a class="heading-elements-toggle">
										<i class="la la-ellipsis-v font-medium-3"></i>
									</a>
									<div class="heading-elements">
										<ul class="list-inline mb-0">
											<li>
												<a data-action="collapse">
													<i class="ft-minus"></i>
												</a>
											</li>
											<li>
												<a data-action="reload">
													<i class="ft-rotate-cw"></i>
												</a>
											</li>
											<li>
												<a data-action="expand">
													<i class="ft-maximize"></i>
												</a>
											</li>
											<li>
												<a data-action="close">
													<i class="ft-x"></i>
												</a>
											</li>
										</ul>
									</div>
								</div>
								<div class="card-content collapse show">
									<div class="card-body">
										<form asp-controller="Users" asp-action="Edit" enctype="multipart/form-data" method="Post">
											<div asp-validation-summary="ModelOnly"></div>
											<div class="form-body">
												<h4 class="form-section">
													<i class="ft-file-text"></i>
													اطلاعات کاربر
												</h4>
												<div class="row">
													@*Role*@
													<div class="col-md-4">
														<div class="form-group">
															<label>
																نقش کاربر
															</label>
															<select class="select2-size-xs form-control" asp-for="RoleId" asp-items="ViewBag.Roles">
															</select>
															<span asp-validation-for="RoleId"></span>
														</div>
													</div>
													@*Gender*@
													<div class="col-md-4">
														<div class="form-group">
															<label>
																جنسیت
															</label>
															<select class="select2-size-xs form-control" asp-for="Gender">
																<option value="@(Domain.Enums.Gender.Male)">مرد</option>
																<option value="@(Domain.Enums.Gender.Female)">زن</option>
															</select>
															<div class="invalid-feedback">
																<span asp-validation-for="Gender"></span>
															</div>
														</div>
													</div>
													@*FirstName*@
													<div class="col-md-4">
														<div class="form-group">
															<label>
																نام:
															</label>
															<input type="text" class="form-control" asp-for="FirstName" placeholder="@Html.DisplayNameFor(m=>m.FirstName)" />
															<div class="invalid-feedback">
															</div>
														</div>
													</div>
													@*LastName*@
													<div class="col-md-4">
														<div class="form-group">
															<label>
																نام خانوادگی:
															</label>
															<input type="text" class="form-control" asp-for="LastName" placeholder="@Html.DisplayNameFor(m=>m.LastName)" />
															<div class="invalid-feedback">
															</div>
														</div>
													</div>
													@*Username*@
													<div class="col-md-4">
														<div class="form-group">
															<label>
																نام کاربری:
															</label>
															<input type="text" class="form-control" asp-for="Username" placeholder="@Html.DisplayNameFor(m=>m.Username)" />
															<div class="invalid-feedback">
																<span asp-validation-for="Username"></span>
															</div>
														</div>
													</div>
													@*EmailAdderss*@
													<div class="col-md-4">
														<div class="form-group">
															<label>
																آدرس ایمیل:
															</label>
															<input type="email" class="form-control" asp-for="EmailAddress" placeholder="@Html.DisplayNameFor(m=>m.EmailAddress)" />
															<div class="invalid-feedback">
																<span asp-validation-for="EmailAddress"></span>
															</div>
														</div>
													</div>
													@*PhoneNumber*@
													<div class="col-md-4">
														<div class="form-group">
															<label>
																شماره تماس:
															</label>
															<input type="text" class="form-control" asp-for="PhoneNumber" placeholder="@Html.DisplayNameFor(m=>m.PhoneNumber)" />
															<div class="invalid-feedback">
																<span asp-validation-for="PhoneNumber"></span>
															</div>
														</div>
													</div>
												</div>
											</div>

											<hr />

											@*Upload File*@
											<div class="row pb-2">
												<div class="col-sm-2 imageUp">
													@{
													string path = $"../../../emoniFiles/Users/{Model.UserAvatar}";
												}
												<div class="imagePreview" style="background-image:url('@path')"></div>
												<label class="btn btn-primary">
													Upload File
													<input type="file" class="uploadFile image" name="File" value="Upload Photo" style="width: 0px;height: 0px;overflow: hidden;">
												</label>
											</div>
										</div>

										<hr />

										<div class="form-actions mt-0 pb-0">
											<a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-glowbtn btn-outline-warning btn-min-width mr-1">
												<i class="ft-corner-down-right"></i>
												بازگشت
											</a>
											<button type="submit" id="submit" class="btn btn-outline-success btn-min-width">
												<i class="la la-check-square-o"></i>
												ذخیره
											</button>
										</div>

									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</div>

@section Scripts
	{

	@*Upload File*@
	<script>
		$(function() {
			$(document).on("change", ".uploadFile", function() {
				var uploadFile = $(this)

				var files = !!this.files ? this.files : []

				if (!files.length || !window.FileReader)
					return; // no file selected, or no FileReader support

				if (/^image/.test(files[0].type)) // only image file
				{
					var reader = new FileReader() // instance of the FileReader

					reader.readAsDataURL(files[0]) // read the local file

					reader.onloadend = function() // set image data as background of div
					{
						//alert(uploadFile.closest(".upimage").find('.imagePreview').length);
						uploadFile.closest(".imageUp").find('.imagePreview').css("background-image", "url(" + this.result + ")");
					}
				}

			});
		});

	</script>

	@{
		await Html.RenderPartialAsync("~/Areas/Admin/Views/Shared/_ValidationScriptsPartial.cshtml");
	}
		}
