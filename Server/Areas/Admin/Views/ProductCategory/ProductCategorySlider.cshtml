@model ViewModels.AdminViewModels.ProductCategories.GetSliderViewModel

@section Styles
{
    <style>
        body {
            background-color: #f5f5f5;
        }

        .imagePreview {
            width: 100%;
            height: 180px;
            background-position: center center;
            background: url(http://cliquecities.com/assets/no-image-e3699ae23f866f6cbdf8ba2443ee5c4e.jpg);
            background-color: #fff;
            background-size: cover;
            background-repeat: no-repeat;
            display: inline-block;
            box-shadow: 0px -3px 6px 2px rgba(0,0,0,0.2);
        }

        .btn-primary {
            display: block;
            border-radius: 0px;
            box-shadow: 0px 4px 6px 2px rgba(0,0,0,0.2);
            margin-top: -5px;
        }

        .imgUp {
            margin-bottom: 15px;
            position: relative;
        }

        .del {
            position: absolute;
            top: 0;
            right: 10px;
            width: 30px;
            height: 30px;
            text-align: center;
            line-height: 30px;
            background-color: rgba(255,255,255,0.6);
            cursor: pointer;
        }

        .imgAdd {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #4bd7ef;
            color: #fff;
            box-shadow: 0px 0px 2px 1px rgba(0,0,0,0.2);
            text-align: center;
            line-height: 30px;
            margin-top: 0px;
            cursor: pointer;
            font-size: 15px;
        }
    </style>
}

    <div class="app-content content">
        <div class="content-wrapper pb-0">
            <div class="content-wrapper-before"></div>
            <div class="content-header row">
                <div class="content-header-right col-md-8 col-12">
                    <div class="breadcrumbs-top">
                        <div class="breadcrumb-wrapper mr-1">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                                        خانه
                                    </a>
                                </li>
                                <li class="breadcrumb-item ">
                                    <a asp-area="Admin" asp-controller="ProductCategorySlider" asp-action="Index">
                                        مدیریت دسته بندی محصولات
                                    </a>
                                </li>
                                <li class="breadcrumb-item active ">
                                    اضافه کردن دسته بندی
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content-body">
                <!-- Basic form layout section start -->
                <section id="basic-form-layouts">
                    <div class="row match-height">
                        <div class="col-md-12">
                            <div class="card mb-0">
                                <div class="card-header">
                                    <h4 class="card-title" id="basic-layout-form">اضافه کردن دسته بندی</h4>
                                    <a class="heading-elements-toggle">
                                        <i class="la la-ellipsis-v font-medium-3"></i>
                                    </a>
                                    <div class="heading-elements">
                                        <ul class="list-inline mb-0">
                                            <li>
                                                <a data-action="collapse">
                                                    <i class="ft-minus"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a data-action="reload">
                                                    <i class="ft-rotate-cw"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a data-action="expand">
                                                    <i class="ft-maximize"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a data-action="close">
                                                    <i class="ft-x"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-content collapse show">
                                    <div class="card-body">

                                        <form class="needs-validation" asp-controller="ProductCategorySlider" asp-action="Create" enctype="multipart/form-data" method="Post">
                                            <div asp-validation-summary="ModelOnly"></div>

                                            <div class="form-body">

                                                <h4 class="form-section">
                                                    <i class="ft-file-text"></i> اطلاعات دسته بندی
                                                </h4>

                                                <!-- Input Slider -->
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label asp-for="Url">لینک صفحه</label>
                                                            <input asp-for="Url" type="text" id="Title" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Url)" required />
                                                            <div class="invalid-feedback">
                                                                <span asp-validation-for="Url"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <hr />

                                                <div class="row pb-2">
                                                    <div class="col-sm-2 imgUp">
                                                        <div class="imagePreview"></div>
                                                        <label class="btn btn-primary">
                                                            Upload
                                                            <input type="file" class="uploadFile img"  value="Upload Photo" style="width: 0px;height: 0px;overflow: hidden;">
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="form-actions mt-0 pb-0">
                                                    <a asp-area="Admin" asp-controller="ProductCategory" asp-action="Index" class="btn btn-glowbtn btn-outline-warning btn-min-width mr-1">
                                                        <i class="ft-corner-down-right"></i>
                                                        بازگشت
                                                    </a>

                                                    <button id="submit" class="btn btn-outline-success btn-min-width" value="upload">
                                                        <i class="la la-check-square-o"></i>
                                                        ذخیره
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- // Basic form layout section end -->
            </div>
            @section Scripts
            {
            <script src="~/ckeditor/ckeditor.js"></script>
            <script>
                CKEDITOR.replace('content');
            </script>
            <script src="~/admin/app-assets/vendors/js/extensions/dropzone.min.js" type="text/javascript"></script>

            <script>
                //$(document).on("click", "i.del", function() {
                //	// 	to remove card
                //	$(this).parent().remove()
                //	// to clear image
                //	// $(this).parent().find('.imagePreview').css("background-image","url('')")
                //});

                $(function() {
                    $(document).on("change", ".uploadFile", function() {
                        var uploadFile = $(this)

                        console.log(this.result)

                        var files = !!this.files ? this.files : []

                        if (!files.length || !window.FileReader) return; // no file selected, or no FileReader support

                        if (/^image/.test(files[0].type)) // only image file
                        {
                            var reader = new FileReader() // instance of the FileReader

                            reader.readAsDataURL(files[0]) // read the local file

                            reader.onloadend = function() // set image data as background of div
                            {
                                //alert(uploadFile.closest(".upimage").find('.imagePreview').length);
                                uploadFile.closest(".imgUp").find('.imagePreview').css("background-image", "url(" + this.result + ")");
                            }
                        }

                    });
                });

            </script>

            @{
                await Html.RenderPartialAsync("~/Areas/Admin/Views/Shared/_ValidationScriptsPartial.cshtml");
            }
        }
        </div>
    </div>