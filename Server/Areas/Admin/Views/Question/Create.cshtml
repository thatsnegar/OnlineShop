@model ViewModels.AdminViewModels.Questions.CreateViewModel

@section Styles
	{
	<link rel="stylesheet" type="text/css" href="~/admin/app-assets/css-rtl/core/colors/palette-gradient.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
	<div class="app-content content">
		<div class="content-wrapper pb-0">
			<div class="content-wrapper-before"></div>
			<div class="content-header row">
				<div class="content-header-right col-md-8 col-12">
					<div class="breadcrumbs-top">
						<div class="breadcrumb-wrapper mr-1">
							<ol class="breadcrumb">
								<li class="breadcrumb-item">
									<a asp-area="Admin" asp-controller="Home" asp-action="Index">
										خانه
									</a>
								</li>
								<li class="breadcrumb-item ">
									<a asp-area="Admin" asp-controller="" asp-action="Index">
										مدیریت پرسش ها
									</a>
								</li>
								<li class="breadcrumb-item active ">
									اضافه کردن پرسش 
								</li>
							</ol>
						</div>
					</div>
				</div>
				<div class="content-header-left col-md-4 col-12 mb-2">
					<div class="float-md-right">
						<div class="see-site">
							<a href="#" class=" see-site-btn" data-toggle="modal" data-keyboard="false" data-target="#keyboard2">
								<i class="ft-monitor"></i>
							</a>
							<div class="see-site-title">
								مشاهده سایت
							</div>
						</div>
					</div>
				</div>
				<div class="iframe-content">
					<div class="modal fade text-left" id="keyboard2" tabindex="-1" role="dialog" aria-labelledby="basicmodallabel3" aria-hidden="true">
						<div class="modal-dialog modal-dialog-centered iframe-dialog" role="document">
							<div class="modal-content">
								<div class="modal-header">
									<h4 class="modal-title" id="basicmodallabel3">نمایش سایت</h4>
									<button type="button" class="close" data-dismiss="modal" aria-label="close">
									</button>
								</div>
								<div class="modal-body">
									<div class="iframe-container">
										<iframe src="https://www.fidarafzar.ir/web-design.html" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" loading="lazy" allowfullscreen></iframe>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="content-body">
				<!-- Basic form layout section start -->
				<section id="basic-form-layouts">
					<div class="row match-height">
						<div class="col-md-12">
							<div class="card mb-0">
								<div class="card-header">
									<h4 class="card-title" id="basic-layout-form">
										اضافه کردن سوال
									</h4>
									<a class="heading-elements-toggle">
										<i class="la la-ellipsis-v font-medium-3"></i>
									</a>
									<div class="heading-elements">
										<ul class="list-inline mb-0">
											<li>
												<a data-action="collapse">
													<i class="ft-minus"></i>
												</a>
											</li>
											<li>
												<a data-action="reload">
													<i class="ft-rotate-cw"></i>
												</a>
											</li>
											<li>
												<a data-action="expand">
													<i class="ft-maximize"></i>
												</a>
											</li>
											<li>
												<a data-action="close">
													<i class="ft-x"></i>
												</a>
											</li>
										</ul>
									</div>
								</div>
								<div class="card-content collapse show">
									<div class="card-body">

										<form class="needs-validation" asp-controller="Question" asp-action="create" enctype="multipart/form-data" method="Post">
											<div asp-validation-summary="ModelOnly"></div>

											<div class="form-body">

												<h4 class="form-section">
													<i class="ft-file-text"></i>
													اطلاعات سوال
												</h4>

												<!-- Input Slider -->
												<div class="row">
													<div class="col-md-4">
														<div class="form-group">
															<label asp-for="DisplayOrder">
																ترتیب نمایش
															</label>
															<input type="DisplayOrder" asp-for="DisplayOrder" id="Title" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.DisplayOrder)" />
															<span asp-validation-for="DisplayOrder" class="text-danger fontsize14"></span>
														</div>
													</div>
												</div>

												<hr />

												<div class="row">
													<div class="col-md-4">
														<div class="form-group">
															<label asp-for="Title">
																عنوان سوال
															</label>
															<input type="text" asp-for="Title" id="Title" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Title)"/>
															<span asp-validation-for="Title" class="text-danger fontsize14"></span>
														</div>
													</div>
												</div>

												<div class="row">
													<div class="col-md-4">
														<div class="form-group">
															<label asp-for="Text">سوال :</label>
															<input type="text" asp-for="Text" id="Title" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Text)"/>
															<span asp-validation-for="Text" class="text-danger fontsize14"></span>
														</div>
													</div>
												</div>

												<div class="form-actions mt-0 pb-0">
													<a asp-area="Admin" asp-controller="Question" asp-action="Index" class="btn btn-glowbtn btn-outline-warning btn-min-width mr-1">
														<i class="ft-corner-down-right"></i>
													بازگشت
													</a>
													<button id="submit" class="btn btn-outline-success btn-min-width">
														<i class="la la-check-square-o"></i>
													ذخیره
													</button>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>

	@section Scripts
	{
		@{
			await Html.RenderPartialAsync("~/Areas/Admin/Views/Shared/_ValidationScriptsPartial.cshtml");
		}

		<script src="~/admin/app-assets/vendors/js/forms/repeater/jquery.repeater.min.js" type="text/javascript"></script>
		<script src="~/admin/app-assets/js/scripts/forms/form-repeater.min.js" type="text/javascript"></script>
		<script src="~/ckeditor/ckeditor.js"></script>
		<script>
			CKEDITOR.replace('content');
		</script>
	}
